<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
    <com.daimajia.swipe.SwipeLayout
            android:id="@+id/swipelist_property_seller"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:tag="Bottom3">
            <ImageView
                    android:tint="@color/button_text_color"
                    android:clickable="true"
                    android:background="@color/colorPrimaryLight"
                    android:id="@+id/swipe_edit_property"
                    android:layout_weight="1"
                    android:src="@drawable/ic_edit"
                    android:layout_width="27dp"
                    android:scaleType="centerInside"
                    android:layout_height="match_parent"/>

            <ImageView
                    android:clickable="true"
                    android:id="@+id/swipe_delete_property"
                    android:layout_width="27dp"
                    android:scaleType="centerInside"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/ic_trash" />
        </LinearLayout>

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:elevation="5dp"
                android:padding="10dp">

            <TextView
                    android:id="@+id/swipe_name"
                    android:text="Property Name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            <TextView
                    android:id="@+id/swipe_type"
                    android:text="Property Type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:tag="Hover"/>
            <TextView
                    android:id="@+id/swipe_cate"
                    android:text="Property Category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            <TextView
                    android:id="@+id/swipe_addr"
                    android:text="Property address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
        </LinearLayout>

    </com.daimajia.swipe.SwipeLayout>
</LinearLayout>