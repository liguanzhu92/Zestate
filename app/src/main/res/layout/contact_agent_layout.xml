<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Contact Agent"
        android:textSize="20sp"/>
    <com.rengwuxian.materialedittext.MaterialEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:id="@+id/buyer_phone_to_conatct"
        android:inputType="number"
        app:met_iconLeft="@drawable/ic_mobile"
        app:met_floatingLabel="normal"
        android:hint="@string/phone_edit_text_hint"
        app:met_maxCharacters="10"
        app:met_primaryColor="@color/colorPrimary"
        app:met_underlineColor="@color/colorPrimaryDark"
        app:met_floatingLabelTextColor="@color/colorPrimaryDark"
        style="@style/Widget.AppCompat.EditText"/>

    <com.rengwuxian.materialedittext.MaterialEditText
        android:textSize="16sp"
        android:id="@+id/buyer_email_to_contact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/email_hint"
        app:met_iconLeft="@drawable/ic_email"
        app:met_floatingLabel="normal"
        app:met_maxCharacters="50"
        app:met_primaryColor="@color/colorPrimary"
        app:met_underlineColor="@color/colorPrimaryDark"
        app:met_floatingLabelTextColor="@color/colorPrimaryDark"/>
    <com.rengwuxian.materialedittext.MaterialEditText
        android:textSize="16sp"
        android:id="@+id/agent_property_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Property Description"
        app:met_floatingLabel="normal"
        app:met_maxCharacters="50"
        app:met_primaryColor="@color/colorPrimary"
        app:met_underlineColor="@color/colorPrimaryDark"
        app:met_floatingLabelTextColor="@color/colorPrimaryDark"/>
    <Button
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
            android:textColor="@color/button_text_color"
            android:background="@drawable/button_selector_solid"
        android:textSize="18sp"
        android:id="@+id/contact_agent_message"
        android:text="Contact Agent"/>
    <LinearLayout
            android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:padding="16dp">
        <Button
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="18sp"
                android:textColor="@color/colorPrimaryDark"
                android:background="@drawable/button_outline"
                android:text="Call"
                android:id="@+id/contact_agent_call"/>
        <Button
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="18sp"
                android:textColor="@color/colorPrimaryDark"
                android:background="@drawable/button_outline"
                android:text="Message" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:orientation="horizontal">
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_alignParentStart="true"
            android:id="@+id/shcedule_select_date"
            android:background="@drawable/button_selector_solid">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:gravity="center"
                android:id="@+id/schedule_date_text"
                android:background="@drawable/button_selector_solid"
                android:textColor="@color/button_text_color"
                android:textSize="15sp"
                android:text="Select Date"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_alignParentEnd="true"
            android:id="@+id/schedule_time_select"
            android:background="@drawable/button_selector_solid">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center"
                android:id="@+id/schedule_time_text"
                android:background="@drawable/button_selector_solid"
                android:textColor="@color/button_text_color"
                android:textSize="15sp"
                android:text="Select Time"/>
        </android.support.v7.widget.CardView>


    </RelativeLayout>
    <Button
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_selector"
        android:textColor="@color/button_text_color"
        android:textSize="18sp"
        android:id="@+id/shcedule_appointment_agent"
        android:text="Schedule Appointment"/>


</LinearLayout>