<LinearLayout
        android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.guanzhuli.zestate.realtor.fragment.PropertyDetailFragment">

    <!-- TODO: Update blank fragment layout -->
    <android.support.v4.view.ViewPager
            android:id="@+id/property_detail_pager"
            android:layout_width="match_parent"
            android:layout_height="240dp">
    </android.support.v4.view.ViewPager>
    <android.support.v4.widget.NestedScrollView android:layout_width="match_parent"
                                                android:layout_height="match_parent">
        <LinearLayout
                android:paddingLeft="@dimen/general_padding"
                android:paddingRight="@dimen/general_padding"
                android:orientation="vertical"
                android:layout_width="match_parent" android:layout_height="wrap_content">
            <LinearLayout
                    android:layout_marginTop="@dimen/general_padding"
                    android:layout_marginBottom="@dimen/general_padding"
                    android:orientation="horizontal"
                    android:layout_width="match_parent" android:layout_height="wrap_content">
                <ImageView
                        android:clickable="true"
                        android:id="@+id/seller_detail_location"
                        android:src="@drawable/ic_location"
                        android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                <TextView
                        android:textSize="22sp"
                        android:id="@+id/seller_detail_address"
                        android:layout_gravity="bottom"
                        android:text="1840 Wessel Ct, St Charles, IL, 60174"
                        android:layout_width="match_parent" android:layout_height="wrap_content"/>
            </LinearLayout>
            <com.google.android.gms.maps.MapView
                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                    android:id="@+id/detail_map_view"
                    android:layout_width="match_parent"
                    android:layout_height="160dp"/>
            <View
                    android:layout_marginTop="@dimen/general_padding"
                    android:layout_marginBottom="@dimen/general_padding"
                    android:background="@android:color/darker_gray"
                    android:layout_width="match_parent" android:layout_height="1dp"/>
            <LinearLayout
                    android:layout_marginTop="@dimen/general_padding"
                    android:orientation="horizontal"
                    android:layout_width="match_parent" android:layout_height="wrap_content">
                <TextView
                        android:textSize="22sp"
                        android:text="Name:"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"/>
                <TextView
                        android:textSize="22sp"
                        android:id="@+id/seller_detail_name"
                        android:text="lily's apartment"
                        android:layout_width="0dp"
                        android:layout_weight="5"
                        android:layout_height="match_parent"/>
            </LinearLayout>
            <LinearLayout
                    android:layout_marginTop="@dimen/general_padding"
                    android:orientation="horizontal"
                    android:layout_width="match_parent" android:layout_height="wrap_content">
                <TextView
                        android:textSize="22sp"
                        android:text="Type:"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"/>
                <TextView
                        android:textSize="22sp"
                        android:id="@+id/seller_detail_type"
                        android:text="apartment"
                        android:layout_width="0dp"
                        android:layout_weight="5"
                        android:layout_height="match_parent"/>
            </LinearLayout>
            <LinearLayout
                    android:layout_marginTop="@dimen/general_padding"
                    android:orientation="horizontal"
                    android:layout_width="match_parent" android:layout_height="wrap_content">
                <TextView
                        android:textSize="22sp"
                        android:text="Category:"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"/>
                <TextView
                        android:textSize="22sp"
                        android:id="@+id/seller_detail_category"
                        android:text="rent"
                        android:layout_width="0dp"
                        android:layout_weight="5"
                        android:layout_height="match_parent"/>
            </LinearLayout>
            <LinearLayout
                    android:layout_marginTop="@dimen/general_padding"
                    android:orientation="horizontal"
                    android:layout_width="match_parent" android:layout_height="wrap_content">
                <TextView
                        android:textSize="22sp"
                        android:text="Cost:"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"/>
                <TextView
                        android:textSize="22sp"
                        android:id="@+id/seller_detail_cost"
                        android:text="500"
                        android:layout_width="0dp"
                        android:layout_weight="5"
                        android:layout_height="match_parent"/>
            </LinearLayout>
            <LinearLayout
                    android:layout_marginTop="@dimen/general_padding"
                    android:orientation="horizontal"
                    android:layout_width="match_parent" android:layout_height="wrap_content">
                <TextView
                        android:textSize="22sp"
                        android:text="Size:"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"/>
                <TextView
                        android:textSize="22sp"
                        android:id="@+id/seller_detail_size"
                        android:text="500"
                        android:layout_width="0dp"
                        android:layout_weight="5"
                        android:layout_height="match_parent"/>
            </LinearLayout>
            <TextView
                    android:textSize="22sp"
                    android:layout_marginTop="@dimen/general_padding"
                    android:text="Description:"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            <TextView
                    android:textSize="22sp"
                    android:id="@+id/seller_detail_description"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginTop="@dimen/general_padding"
                    android:text="Pet. Laundry."
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            <LinearLayout
                    android:layout_marginTop="@dimen/general_padding"
                    android:orientation="horizontal"
                    android:layout_width="match_parent" android:layout_height="wrap_content">
                <Button
                        android:textSize="22sp"
                        android:text="Edit"
                        android:padding="@dimen/activity_horizontal_margin"
                        android:id="@+id/seller_detail_button_edit"
                        android:textColor="@color/button_text_color"
                        android:backgroundTint="@color/colorPrimary"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"/>
                <Button
                        android:textSize="22sp"
                        android:text="Delete"
                        android:id="@+id/seller_detail_button_delete"
                        android:textColor="@color/button_text_color"
                        android:backgroundTint="@color/colorPrimary"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"/>
            </LinearLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>
