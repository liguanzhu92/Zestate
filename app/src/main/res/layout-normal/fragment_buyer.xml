<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:paddingLeft="@dimen/activity_horizontal_margin"
              android:paddingRight="@dimen/activity_horizontal_margin"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              tools:context=".buyer.BuyerFragment">

    <!-- TODO: Update blank fragment layout -->
    <ImageView
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:src="@drawable/logo"
            android:layout_width="112dp" android:layout_height="56dp"/>
    <ScrollView android:layout_width="match_parent" android:layout_height="match_parent">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent" android:layout_height="wrap_content">
            <com.rengwuxian.materialedittext.MaterialEditText
                    android:textSize="16sp"
                    android:id="@+id/buyer_signup_fname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:met_iconLeft="@drawable/ic_account"
                    android:hint="First Name"
                    app:met_floatingLabel="normal"
                    app:met_maxCharacters="50"
                    app:met_primaryColor="@color/colorPrimary"
                    app:met_underlineColor="@color/colorPrimaryDark"
                    app:met_floatingLabelTextColor="@color/colorPrimaryDark"/>
            <com.rengwuxian.materialedittext.MaterialEditText
                    android:textSize="16sp"
                    android:id="@+id/buyer_signup_lname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Last Name"
                    android:layout_marginLeft="64dp"
                    app:met_floatingLabel="normal"
                    app:met_maxCharacters="50"
                    app:met_primaryColor="@color/colorPrimary"
                    app:met_underlineColor="@color/colorPrimaryDark"
                    app:met_floatingLabelTextColor="@color/colorPrimaryDark"/>
            <com.rengwuxian.materialedittext.MaterialEditText
                    android:textSize="16sp"
                    android:id="@+id/buyer_signup_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Email"
                    app:met_iconLeft="@drawable/ic_email"
                    app:met_floatingLabel="normal"
                    app:met_maxCharacters="50"
                    app:met_primaryColor="@color/colorPrimary"
                    app:met_underlineColor="@color/colorPrimaryDark"
                    app:met_floatingLabelTextColor="@color/colorPrimaryDark"/>
            <com.rengwuxian.materialedittext.MaterialEditText
                    android:textSize="16sp"
                    android:id="@+id/buyer_signup_mobile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Mobile"
                    app:met_iconLeft="@drawable/ic_mobile"
                    app:met_floatingLabel="normal"
                    app:met_maxCharacters="10"
                    app:met_primaryColor="@color/colorPrimary"
                    app:met_underlineColor="@color/colorPrimaryDark"
                    app:met_floatingLabelTextColor="@color/colorPrimaryDark"/>
            <com.rengwuxian.materialedittext.MaterialEditText
                    android:textSize="16sp"
                    android:id="@+id/buyer_signup_pwd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Password"
                    app:met_iconLeft="@drawable/ic_pwd"
                    app:met_floatingLabel="normal"
                    app:met_maxCharacters="15"
                    app:met_primaryColor="@color/colorPrimary"
                    app:met_underlineColor="@color/colorPrimaryDark"
                    app:met_floatingLabelTextColor="@color/colorPrimaryDark"/>
            <TextView
                    android:gravity="center"
                    android:text="Accept the service term."
                    android:layout_width="match_parent" android:layout_height="wrap_content"/>
            <Button
                    android:id="@+id/buyer_signup_confirm"
                    android:text="Confirm Account"
                    android:textColor="@color/button_text_color"
                    android:backgroundTint="@color/colorPrimary"
                    android:layout_width="match_parent" android:layout_height="wrap_content"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
